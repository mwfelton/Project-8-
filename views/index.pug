extends layout

block content
  div.background
    h1 Books

      include search
  div.maintable
    a.button(href='/books/new') Create New Book
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody

      each book in bookList
        tr
          td
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year
        tr
  
  include pagination